<ConfigWindow>:
    name: "config"

    player_name: player_name
    role: role

    FloatLayout:

        Label:
            text: "Player name: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15
        
        TextInput:
            id: player_name
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x":0.45, "top":0.9}
            size_hint: 0.4, 0.15
        
        Label:
            text: "Player role: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15
        
        TextInput:
            id: role
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x":0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint: {"x":0.2, "y":0.05}
            size_hint: 0.6, 0.12
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Add"
            on_release:
                root.submitbtn()
        
        Button:
            pos_hint: {"x":0.3, "y":0.25}
            size_hint: 0.6,0.12
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Start"
            on_release:
                root.start_game()

